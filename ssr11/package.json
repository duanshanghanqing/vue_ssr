{
  "name": "ssr",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:buildClient": "cross-env NODE_ENV=development webpack --watch --config build/webpack.client.config.js",
    "dev:buildServer": "cross-env NODE_ENV=development webpack --watch --config build/webpack.server.config.js",
    "dev": "rimraf dist && npm-run-all --parallel dev:**",
    "devstart": "nodemon --watch dist --watch server --exec cross-env STAGE_ENV=dev node ./server/index.js",
    "build:dev": "rimraf dist && cross-env NODE_ENV=development webpack --config build/webpack.client.config.js && cross-env NODE_ENV=development webpack --config build/webpack.server.config.js",
    "build:prod": "rimraf dist && cross-env NODE_ENV=production webpack --config build/webpack.client.config.js && cross-env NODE_ENV=production webpack --config build/webpack.server.config.js",
    "server:dev": "cross-env STAGE_ENV=dev node ./server/index.js",
    "server:test": "cross-env STAGE_ENV=test node ./server/index.js",
    "server:sim": "cross-env STAGE_ENV=sim node ./server/index.js",
    "server:prod": "cross-env STAGE_ENV=prod node ./server/index.js",
    "pm2:dev": "pm2 restart ecosystem.config.js --only ssr_dev",
    "pm2:test": "pm2 restart ecosystem.config.js --only ssr_test",
    "pm2:sim": "pm2 restart ecosystem.config.js --only ssr_sim",
    "pm2:prod": "pm2 restart ecosystem.config.js --only ssr_prod",
    "pm2:stopdev": "pm2 stop ssr_dev && pm2 delete ssr_dev",
    "pm2:stoptest": "pm2 stop ssr_test && pm2 delete ssr_test",
    "pm2:stopsim": "pm2 stop ssr_sim && pm2 delete ssr_sim",
    "pm2:stopprod": "pm2 stop ssr_prod && pm2 delete ssr_prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.5.1",
    "lru-cache": "^5.1.1",
    "vue": "^2.6.10",
    "vue-router": "^3.0.6",
    "vue-server-renderer": "^2.6.10",
    "vuex": "^3.1.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^9.5.1",
    "babel-loader": "^8.0.6",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "sass-resources-loader": "^2.0.1",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}